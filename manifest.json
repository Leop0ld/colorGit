{
    "manifest_version" : 2,
    "name": "colorGit",
    "version": "1.1",
    "description": "Make your GitHub more colorful",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "jquery.min.js"
        ]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },
    "permissions": [
        "tabs",
        "*://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://github.com/*"
            ],
            "js": [
                "jquery.min.js",
                "changeColor.js"
            ]
        }
    ]
}
